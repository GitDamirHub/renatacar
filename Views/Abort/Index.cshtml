
@{
    ViewBag.Title = "Index";
}

<h3>Odobreni Zahtijevi:</h3>

<hr />
<div class="row">
@foreach (var m in @Model)
{
    <div class="col-xs-12 col-md-6">
        <h5>VOZILO: @m.vehicle.Manufacturer - @m.vehicle.Model</h5>
        <h5>KUPAC:  @m.request.Name @m.request.Surname, @m.request.Email</h5>
        <h5>POČETNI/ZAVRŠNI TERMIN: @m.request.StartDate.ToString("dd/MM/yyyy") - @m.request.EndDate.ToString("dd/MM/yyyy")</h5>
        <h4><a class="make-decision-link action-deny" href="/Admin/Delete/@m.request.Id"> Otkaži</a></h4>
        <h4></h4>
        <hr />
    </div>
}
</div>

